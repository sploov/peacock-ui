    "clsx": "^2.1.1",
    "framer-motion": "^12.0.0-alpha.0",
    "lucide-react": "^0.454.0",
    "tailwind-merge": "^2.5.4"
  },
  "peerDependencies": {
    "react": "^19.0.0-rc",
    "react-dom": "^19.0.0-rc",
    "tailwindcss": "^3.4.14"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/react": "^19.0.0-rc",
    "@types/react-dom": "^19.0.0-rc",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.47",
    "react": "^19.0.0-rc",
    "react-dom": "^19.0.0-rc",
    "storybook": "^8.4.1",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.4"
  }
}
